<%- include("../heder") %>

  <div class="page-wrapper">

    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Blogs</h4>
        </div>
      </div>
    </div>

    <!-- Search -->
    <div class="container mt-1">
      <form method="GET" action="/Blog/view-Blog">
        <input type="text" name="search" placeholder="Search by title..."
          value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control">
        <button class="btn btn-primary mt-2" type="submit">Search</button>
      </form>
    </div>

    <div class="container-fluid mt-4">
      <div class="row">

        <% if (Blog.length===0) { %>
          <p class="ml-3">No blogs found.</p>
          <% } %>

            <% Blog.forEach((blog, i)=> { %>

              <div class="col-md-4 mb-4">
                <div class="card shadow">

                  <img src="<%= blog.image %>" class="card-img-top" style="height:200px; object-fit:cover;">

                  <div class="card-body">
                    <h5 class="card-title">
                      <%= blog.title %>
                    </h5>

                    <p class="card-text text-muted">
                      <%= blog.short_desc %>
                    </p>
                    <p class="card-text text-muted">
                      <%= new Date(blog.date).toLocaleDateString('en-IN', { day: '2-digit' , month: '2-digit' ,
                        year: 'numeric' }) %>

                    </p>

                    <p class="card-text">
                      <small>Category: <%= blog.category %></small>
                    </p>

                    <div class="d-flex justify-content-between">
                      <a href="/Blog/edit-Blog/<%= blog._id %>" class="btn btn-info btn-sm">Edit</a>
                      <a href="/Blog/delete-Blog/<%= blog._id %>" class="btn btn-danger btn-sm">Delete</a>
                      <a href="/Blog/single-Blog/<%= blog._id %>" class="btn btn-success btn-sm">View</a>
                    </div>

                  </div>
                </div>
              </div>

              <% }) %>

      </div>
    </div>

  </div>

  <%- include("../footer") %>