<!DOCTYPE html>
<html>
<head>
    <title>My To-Do List</title>

    <style>
        body{
            margin:0;
            padding:0;
            font-family: sans-serif;
            background:#181831;
            color:#fff;
        }

        .container{
            width:400px;
            margin:30px auto;
            background:#26264a;
            padding:20px;
            border-radius:12px;
        }

        h1{ text-align:center; }

        .input-sec{
            display:flex;
            gap:10px;
            margin-bottom:20px;
        }

        input,select{
            width:100%;
            padding:8px;
            border:none;
            border-radius:6px;
        }

        button{
            padding:8px 14px;
            border:none;
            border-radius:6px;
            background:#4e9af1;
            color:#fff;
            cursor:pointer;
        }

        table{
            width:100%;
            margin-top:10px;
            font-size:14px;
            border-collapse:collapse;
        }

        th,td{
            padding:10px;
            text-align:center;
            background:#1e1e3c;
        }

        .btn-del{
            background:#e63946;
        }

        .btn-edit{
            background:#43aa8b;
        }

    </style>
</head>
<body>

    <div class="container">
        <h1> My To-Do List</h1>

        <!-- ADD TASK -->
        <form action="/add-task" method="post">
            <div class="input-sec">
                <input type="text" name="id" placeholder="ID">
                <input type="text" name="task" placeholder="Task Name">

                <select name="priority">
                    <option>High</option>
                    <option>Medium</option>
                    <option>Low</option>
                </select>

                <button>Add</button>
            </div>
        </form>

        <!-- TABLE -->
        <table>
            <tr>
                <th>ID</th>
                <th>Task</th>
                <th>Priority</th>
                <th>Action</th>
            </tr>

            <% todo.forEach(t => { %>
            <tr>
                <td><%= t.id %></td>
                <td><%= t.task %></td>
                <td><%= t.priority %></td>
                <td>
                    <a href="/delete-task/<%= t.id %>">
                        <button class="btn-del">üóë</button>
                    </a>
                    <a href="/edit-task/<%= t.id %>">
                        <button class="btn-edit">‚úèÔ∏è</button>
                    </a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>

</body>
</html>
