<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <style>
        body{
    font-family: Arial;
    background:#f7f7f7;
}

.title{
    margin-bottom:10px;
}

.line{
    width:60%;
}

.add-form{
    margin-bottom:15px;
    display:flex;
    gap:10px;
    justify-content:center;
}

.add-form input, 
.add-form select{
    padding:6px;
    border-radius:6px;
    border:1px solid #aaa;
}

.btn{
    padding:6px 14px;
    border:none;
    border-radius:6px;
    cursor:pointer;
    font-weight:bold;
}

/* Table */
.list-table{
    width:760px;
    border-collapse:collapse;
    box-shadow:0px 2px 18px rgba(0,0,0,0.1);
}

.list-table td{
    padding:10px;
    text-align:center;
}

.header{
    background:#ececff;
    font-weight:bold;
}


.edit{
    background:#6c63ff;
    color:white;
}

.delete{
    background:#ff4b4b;
    color:white;
}


.badge{
    padding:6px 10px;
    border-radius:8px;
    font-weight:bold;
}

.high{
    background:#ffb3b3;
}

.medium{
    background:#fff4a6;
}

.low{
    background:#b2ffb7;
}

    </style>
</body>
</html>
<center>



   <center>

    <h1 class="title">TO DO LIST</h1>
    <hr class="line">

    <form action="/add-task" method="post" class="add-form">
        <input type="text" name="id" placeholder="ID" required>
        <input type="text" name="task" placeholder="Task Name" required>

        <select name="priority">
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
        </select>

        <input type="text" name="category" placeholder="Category" required>
        <input type="date" name="dueDate">

        <button class="btn">Add</button>
    </form>

    <table class="list-table">
        <tr class="header">
            <td>ID</td>
            <td>Task</td>
            <td>Priority</td>
            <td>Category</td>
            <td>Due Date</td>
            <td>Actions</td>
        </tr>

        <% todo.forEach(item => { %>
        <tr>
            <td><%= item.id %></td>
            <td><%= item.task %></td>

            <td>
                <span class="badge <%= item.priority.toLowerCase() %>">
                    <%= item.priority %>
                </span>
            </td>

            <td><%= item.category %></td>
            <td><%= item.dueDate %></td>

            <td>
                <a href="/delete-task/<%= item.id %>" 
                   style="padding:6px 12px;color:#fff;background:#ff4b4b;border-radius:6px;text-decoration:none;">
                    Delete
                </a>

                <a href="/edit-task/<%= item.id %>" 
                   style="padding:6px 12px;color:#fff;background:#6c63ff;border-radius:6px;text-decoration:none;margin-left:6px;">
                    Edit
                </a>
            </td>

        </tr>
        <% }) %>

    </table>

</center>

 