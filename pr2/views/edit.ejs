<div style="width:420px; margin:40px auto; background:#f1f1f1; padding:20px; border-radius:10px;">

    <h2 style="text-align:center;">Edit Task</h2>
    <hr>

    <form action="/update-task?taskId=<%= task.id %>" method="post">

        <ul style="list-style:none; padding:0;">

            <li style="margin:12px 0;">
                <label style="font-weight:bold;">Task</label><br>
                <input type="text" name="task" value="<%= task.task %>"
                style="width:100%; padding:8px; border-radius:6px; border:1px solid #ccc;">
            </li>

            <li style="margin:12px 0;">
                <label style="font-weight:bold;">Priority</label><br>
                <select name="priority" 
                style="width:100%; padding:8px; border-radius:6px; border:1px solid #ccc;">
                    <option <%= task.priority=="High"?"selected":"" %>>High</option>
                    <option <%= task.priority=="Medium"?"selected":"" %>>Medium</option>
                    <option <%= task.priority=="Low"?"selected":"" %>>Low</option>
                </select>
            </li>

            <li style="margin:12px 0;">
                <label style="font-weight:bold;">Category</label><br>
                <input type="text" name="category" value="<%= task.category %>"
                style="width:100%; padding:8px; border-radius:6px; border:1px solid #ccc;">
            </li>

            <li style="margin:12px 0;">
                <label style="font-weight:bold;">Due Date</label><br>
                <input type="date" name="dueDate" value="<%= task.dueDate %>"
                style="width:100%; padding:8px; border-radius:6px; border:1px solid #ccc;">
            </li>

            <li style="margin:12px 0; text-align:center;">
                <button 
                style="padding:10px 18px; border:none; background:#6c63ff; color:white; border-radius:8px; font-weight:bold;">
                    Update
                </button>
            </li>

        </ul>

    </form>

</div>
