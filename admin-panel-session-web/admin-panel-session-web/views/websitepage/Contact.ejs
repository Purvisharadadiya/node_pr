<style>
    body{
    font-family: 'Poppins', sans-serif;
    margin: 0;
    background: #f8f5f0;
    color: #3b2a20;
}

/* Hero */
.contact-hero{
    text-align: center;
    padding: 60px 20px;
    background: linear-gradient(to right,#e8dcca,#f8f5f0);
}

.contact-hero h1{
    font-size: 40px;
    margin-bottom: 10px;
}


.contact-container{
    display: flex;
    gap: 40px;
    padding: 60px 10%;
    flex-wrap: wrap;
}

.contact-info{
    flex: 1;
}

.info-box{
    background: white;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 12px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
}


.contact-form{
    flex: 1;
    background: white;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.contact-form h2{
    margin-bottom: 20px;
}

.contact-form input,
.contact-form textarea{
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border-radius: 8px;
    border: 1px solid #ccc;
}

.contact-form button{
    background: #3b2a20;
    color: white;
    padding: 12px;
    width: 100%;
    border: none;
    border-radius: 30px;
    cursor: pointer;
}


.map iframe{
    width: 100%;
    height: 350px;
    border: none;
}

</style>

